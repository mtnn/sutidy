<div class='container'>
  <div class="row mt-3">
    <div>
      <%= form_with model: @genre, url:'/admins/genres', local: true, scope: "genre" do |t| %>
        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= t.text_field :genre_name %>
          <%=t.submit '追加', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-6'>
      <table class='table'>
        <thead class="thead-light">
          <tr>
            <th></th>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.genre_name %>
                </td>
              <td></td>
              <td>
                <%= link_to "削除", admins_genre_path(genre), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
