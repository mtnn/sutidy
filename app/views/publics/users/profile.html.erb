<div class="container">
  <div class="row">

    <div class="col-md-10">
      <h5>プロフィール</h5>

      <table class="col-md-8" border="1">
        <tr>
          <th>氏名</th>
          <th><%= @user.last_name %> <%= @user.first_name%></th>
        </tr>
        <tr>
          <th>カナ</th>
          <th><%= @user.last_name_kana %> <%= @user.first_name_kana %> </th>
        </tr>
        <tr>
          <th>性別</th>
          <th><%= @user.gender %></th>
        </tr>
        <tr>
          <th>年齢</th>
          <th><%= @user.age %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @user.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @user.address %></th>
        </tr>
      </table>

      <%= link_to "編集する", users_profile_edit_path, class: "btn btn-sm btn-success" %>

    </div>
  </div>
</div>