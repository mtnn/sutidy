<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-4">
      <h5>会員情報編集</h5>

      <%= form_with model: @user, url: "/users/profile" , local:true do |f| %>

        <div class="form-group">
          <label>氏名</label>
          <%= f.text_field :last_name, class: "form-control" %>   <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>フリガナ</label>
          <%= f.text_field :last_name_kana, class: "form-control" %>   <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>年齢</label>
          <td><%= f.select :age, User.ages.keys %></td>
        </div>

        <div class="form-group">
          <label>郵便番号</label>
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>住所</label>
           <%= f.text_field :address, class: "form-control" %>
        </div>

          <%= f.submit '編集内容を保存', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
