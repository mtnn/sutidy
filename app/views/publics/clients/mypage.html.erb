<div class="container">
  <div class="row">
    <div class="col-md-8 mt-3">
      <h4>展開サービス一覧</h4>
      <% @services.each do |service| %>
        <table class="border">
          <tr>
            <td>
              <% if service.image.attached? %>
                <%= image_tag service.image %>
              <% else %>
                <%= image_tag 'sutidy_noimage.png', size: '150x120' %>
              <% end %>
            </td>
            <td>
              <%= link_to service.name, clients_analytics_path(service.client_id) %>
              <div class="text-right">
                ¥<strong><%= service.price %></strong>(税込)
              </div>
            </td>
          </tr>
        </table>
      </div>
    <% end %>

    <div class="col-md-4 mt-5">
      <%= link_to(new_service_path) do %>
        <button class="btn btn-warning btn-lg" >新規サービス作成</button>
      <% end %>
    </div>
  </div>
</div>