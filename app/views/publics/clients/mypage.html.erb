<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h4>展開サービス一覧</h4>
      <% @services.each do |service| %>
        <a>
        <% if service.image.attached? %>
          <%= image_tag service.image %>
        <% else %>
          <%= image_tag 'sutidy_noimage.png', size: '150x120' %>
        <% end %>
        </a>
        <h5><%= service.name %></h5>
        <p>¥<strong><%= service.price %></strong>(税込)</p>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= link_to(new_service_path) do %>
        <button class="btn btn-warning btn-lg" >新規サービス作成</button>
      <% end %>
    </div>
  </div>
</div>